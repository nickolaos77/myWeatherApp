            navigator.geolocation.getCurrentPosition(function (position) {
                let lat = position.coords.latitude.toFixed(2)
                let lon = position.coords.longitude.toFixed(2)
                location.href = "/locate/" + lat + '/' + lon 
                console.log(lat,lon)
