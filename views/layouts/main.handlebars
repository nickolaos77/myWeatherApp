            $('#first').addClass('hidden');

        }

        $(document).ready(function () {
            $('#simple-menu').sidr({
                displace: false
            });
            //visibility
            setTimeout(function () {
                //check to see if page has loaded after 2 secs
                if (document.readyState !== 'complete') show();
                //if it hasn't keep waiting until it is ready
                else {
                    $(document).ready(function () {
                        show();
                    })
                }
            }, 2000); 
        });
        $('#overlay, #close-menu-button').click(function () {
            $.sidr('close', 'sidr');
        });
